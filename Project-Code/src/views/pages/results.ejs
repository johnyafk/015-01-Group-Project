<%- include ('../partials/header') %>
<%- include ('../partials/menu') %>

<main>
  <div class="container" style="align-content: center;">
    <h1 style="text-align: center; padding-top: 25px; padding-bottom: 25px;">Results</h1>
    <div class="row" style="min-height: 100px; justify-content: center;">
        <% videos.forEach(video => { %>

            <div class="card" style="width: 25rem; height: 20rem; padding-top: 10px; padding-bottom: 5px;">
                <iframe src="http://youtube.com/embed/<%= video.id.videoId %>" height="300" frameborder="0"></iframe>
                <div class="card-body">
                <h5 class="card-title"> <%= video.snippet.title %> </h5>
                <form action="/saveVideo" method="POST" style="text-align: center;">
                    <div hidden class="mb-3">
                      <input name="videoID" type="text" class="form-control" value="<%= video.id.videoId %>">
                    </div>
                    <div hidden class="mb-3">
                        <input name="videoTitle" type="text" class="form-control" value="<%= video.snippet.title %> ">
                      </div>
                    <button type="submit" class="btn btn-primary">Save Video</button>
                </form>
                </div>
            </div>
            <% }) %>
    </div>
        
            
    </div>
  </div>
</main>

<%- include ('../partials/footer') %>