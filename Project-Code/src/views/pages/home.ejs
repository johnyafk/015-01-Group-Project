<main>
    <div class="container">
        <br>
        <h1>Welcome, <%= user.username %></h1>
        <br>
        <div class="row row-cols-1 row-cols-md-3 g-4">
            <% savedVideos.forEach(video => { %>

                <div class="col">
                    <div class="card h-100">
                        <iframe src="https://www.youtube.com/embed/<%= video.videoid %>" height="150" frameborder="0"></iframe>
                        <div class="card-body">
                            <h5 class="card-title"> <%= video.videotitle %> </h5>
                        </div>
                        <form action="/removeVideo" method="POST">
                            <div hidden class="mb-3">
                                <input name="videoID" type="text" class="form-control" value="<%= video.videoid %>">
                            </div>
                            <button type="submit" class="btn btn-danger">Remove Video</button>
                        </form>
                    </div>
                </div>
            <% }) %>
        </div>
    </div>
</main>

