<%- include ('../partials/head') %>
<%- include ('../partials/menu') %>
<%- include ('../partials/message') %>

<main>
  <div class="container">
    <div class="row">
      <% results.forEach((event, index) => { %>
        <div class="col-md-4 mb-4">
          <div class="card">
            <img src="<%= event.images[0].url %>" class="card-img-top" alt="Event image">
            <div class="card-body">
              <h5 class="card-title"><%= event.name %></h5>
              <p class="card-text"><strong>Timezone:</strong> <%= event.timezone %></p>
              <p class="card-text"><strong>Date:</strong> <%= event.dates.start.localDate %></p>
              <p class="card-text"><strong>Time:</strong> <%= event.dates.start.localTime %></p>
              <div class="text-center">
                <a href="<%= event.url %>" class="btn btn-primary">Book Tickets</a>
              </div>
            </div>
          </div>
        </div>
        <% if ((index + 1) % 3 == 0) { %>
          </div><div class="row">
        <% } %>
      <% }) %>
    </div>
  </div>
</main>

<%- include ('../partials/footer') %>
